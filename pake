#!/bin/sh

# Version string
BUILD_ID="1.0.0"

# Mesage symbols
MSG_OK="[  OK  ] :"
MSG_FAIL="[ FAIL ] :"
MSG_NOTE="[ NOTE ] :"

# Print version string
echo "$MSG_NOTE pake $BUILD_ID"

# Basic configuration
# CC=
# ARGS=
# SOURCE_FILE=
# OUT_FILE=

# Clean up
if [ -f "$OUT_FILE" ]; then
 rm $OUT_FILE
fi

# Checks for $OUT_FILE and reports it
# This should be used after every compilation
check_bin() {
	if [ -f "$OUT_FILE" ]; then
  		echo "$MSG_OK compiled $SOURCE_FILE successfully."
	else
  		echo "$MSG_FAIL failed to compile $SOURCE_FILE"
	fi 
}

# Allows for specific build instructions
# see the README for more details.
user_functions() {
 case "$1" in
	"build")
	  # $CC $ARGS $SOURCE_FILE -o $OUT_FILE
	  # check_bin
	;;
 esac
}

# Use user input as parameter for user_functions()
user_functions $1
